        </TabControl>
        <TabControl Margin="10,0" x:Name="adminControls"  Visibility="Hidden" IsEnabled="False" Grid.ColumnSpan="2">
            <TabItem Header="Edit Users" x:Name="editUsers">
                <Grid Background="WhiteSmoke" Margin="0">
