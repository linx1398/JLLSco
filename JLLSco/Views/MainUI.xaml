                    <GroupBox Grid.Column="1" Header="Settings" HorizontalAlignment="Left" Margin="296,15,0,0" VerticalAlignment="Top" Height="265" Width="383" x:Name="SettingsBox">
                        <ListView HorizontalAlignment="Left" Height="289" VerticalAlignment="Top" Width="381" Margin="-296,-16,0,0">
                            <ListView.View>
                                <GridView>
